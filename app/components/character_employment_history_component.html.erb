<div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4">
  <h4 class="text-center">Employment History (<%= counter %>)</h4>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th colspan="2" class="text-center">Corporation</th>
        <th class="text-right">Joined at</th>
      </tr>
    </thead>

    <tbody>
      <% character_corporation_histories.each do |record| %>
        <%= render(CharacterEmploymentHistoryRowComponent.new(
              corporation: record.corporation,
              start_date: record.start_date)) %>
      <% end %>
    </tbody>
  </table>
</div>
