<!DOCTYPE html>
<html lang="en">
  <head>
    <% if Setting.use_google_analytics %>
      <%= render "shared/google_analytics" %>
    <% end %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= display_meta_tags site: "EveMonk: EVE Online management suite",
                          reverse: true %>

    <!-- Disable translation prompt -->
    <meta name="google" content="notranslate">

    <!-- Force IE 8/9/10 to use its latest rendering engine -->
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<!--    <div>-->
      <%# if current_user %>
        <%#= link_to("Sign Out", sign_out_path, method: :delete) %>
      <%# else %>
<!--        <%#= link_to("Sign In", sign_in_path) %><br>-->
        <%#= link_to("Sign Up", sign_up_path) %>
      <%# end %>
<!--    </div>-->

    <div class="container">
      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>

      <%= yield %>

      <div class="w-100"></div>

      <div class="row text-center">
        <div class="col">
          &copy; 2016 &mdash; 2019 <strong>EveMonk</strong>
        </div>
      </div>
    </div>

    <% if Setting.use_gauges %>
      <%= render "shared/gauges" %>
    <% end %>
  </body>
</html>
