<div class="row">
  <div class="col">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to("Home", root_path) %></li>
        <li class="breadcrumb-item active" aria-current="page"><%= "Alliances" %></li>
      </ol>
    </nav>
  </div>
</div>

<div class="row">
  <div class="col">
    <table class="table table-dark table-striped table-bordered">
      <thead>
        <tr>
          <td>&nbsp;</td>
          <td>Name</td>
          <td class="text-right">Corporations</td>
          <td class="text-right">Members</td>
        </tr>
      </thead>
      <tbody>
        <% @alliances.each do |alliance| %>
          <tr>
            <td class="align-middle text-center"><%= image_tag(alliance.icon_tiny) %></td>
            <td><%= link_to(alliance.name, universe_alliance_path(alliance.alliance_id)) %> (<%= alliance.ticker %>)</td>
            <td class="text-right"><%= alliance.corporations_count %></td>
            <td class="text-right"><%= alliance.characters_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row justify-content-center">
  <%= paginate @alliances %>
</div>
