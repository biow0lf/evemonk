<% set_meta_tags title: "Alliance &quot;#{ @alliance.name }&quot; (#{ @alliance.ticker })",
                 og: {
                   title: :title,
                   url: universe_alliance_url(@alliance.alliance_id),
                   type: "website",
                   site_name: "EveMonk: EveOnline management suite",
                   image: @alliance.icon_medium,
                   locale: "en_US",
                 } %>

<div class="row">
  <div class="col">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to("Home", root_path) %></li>
        <li class="breadcrumb-item"><%= link_to("Alliances", universe_alliances_path) %></li>
        <li class="breadcrumb-item active" aria-current="page"><%= @alliance.name %></li>
      </ol>
    </nav>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-4 col-xl-4">
    <h4 class="text-center text-break">Alliance: <%= @alliance.name %></h4>

    <div class="card">
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-center"><%= image_tag(@alliance.icon_medium, class: "rounded") %></li>
        <li class="list-group-item text-break">Ticker: <%= @alliance.ticker %></li>
        <li class="list-group-item">Members: <%= number_with_delimiter(@alliance.characters_count, delimiter: " ") %></li>
        <li class="list-group-item text-break">Creator: <%= link_to(@alliance.creator.name, universe_character_path(@alliance.creator.character_id)) %></li>
        <li class="list-group-item text-break">Executor: <%= link_to(@alliance.executor_corporation.name, universe_corporation_path(@alliance.executor_corporation.corporation_id)) %></li>
        <li class="list-group-item">Corporations: <%= @alliance.corporations_count %></li>
      </ul>
      <p class="card-text text-center"><small class="text-muted">Last updated <%= time_ago_in_words(@alliance.updated_at) %> ago</small></p>
    </div>
  </div>

  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-8 col-xl-8">
    <h4 class="text-center">Corporations</h4>

    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>&nbsp;</th>
          <th>Name</th>
          <th class="text-right">Members</th>
        </tr>
      </thead>
      <tbody>
        <% @corporations.order(:name).each do |corporation| %>
          <tr>
            <td class="align-middle text-center"><%= image_tag(corporation.icon_tiny, class: "rounded") %></td>
            <td class="text-break"><%= link_to(corporation.name, universe_corporation_path(corporation.corporation_id)) %> (<%= corporation.ticker %>)</td>
            <td class="text-right"><%= corporation.formatted_member_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
