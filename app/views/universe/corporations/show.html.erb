Characters:

<table class="table table-dark table-striped table-bordered">
  <thead>
    <tr>
      <td>&nbsp;</td>
      <td>Name</td>
    </tr>
  </thead>
  <tbody>
    <% @history.each do |record| %>
      <tr>
        <td class="align-middle text-center"><%= image_tag(record.character.icon_tiny) %></td>
        <td><%= link_to(record.character.name, universe_character_path(record.character.character_id)) %></td>
        <td><%= record.start_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>
