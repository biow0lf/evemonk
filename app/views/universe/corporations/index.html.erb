<% set_meta_tags title: "Corporations",
                 canonical: universe_corporations_url,
                 og: {
                   title: :title,
                   url: universe_corporations_url,
                   type: "website",
                   site_name: "EveMonk: EveOnline management suite",
                   locale: "en_US",
                 } %>

<div class="row">
  <div class="col">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to("Home", root_path) %></li>
        <li class="breadcrumb-item active" aria-current="page">Corporations</li>
      </ol>
    </nav>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <td>&nbsp;</td>
          <td>Name</td>
          <td class="text-right">Members</td>
        </tr>
      </thead>
      <tbody>
        <% @corporations.each do |corporation| %>
          <tr>
            <td class="align-middle text-center"><%= image_tag(corporation.icon_tiny, class: "rounded") %></td>
            <td class="text-break"><%= link_to(corporation.name, universe_corporation_path(corporation.corporation_id)) %> (<%= corporation.ticker %>)</td>
            <td class="text-right"><%= corporation.formatted_member_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="w-100"></div>

  <%= paginate @corporations %>
</div>
