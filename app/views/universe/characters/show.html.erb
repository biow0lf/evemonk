<% set_meta_tags title: "Character &quot;#{ @character.name }&quot;",
                 og: {
                     title: :title,
                     url: "https://evemonk.com/universe/characters/#{ @character.character_id }",
                     type: "website",
                     site_name: "EveMonk: EveOnline management suite",
                     image: @character.icon_medium,
                 } %>


