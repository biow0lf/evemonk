<% set_meta_tags title: "Characters",
                 og: {
                   title: :title,
                   url: "https://evemonk.com/universe/characters",
                   type: "website",
                   site_name: "EveMonk: EveOnline management suite",
                   locale: "en_US",
                 } %>


