<div class="row">
  <div class="col">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to("Home", root_path) %></li>
        <li class="breadcrumb-item active" aria-current="page"><%= t("devise.authy_verify_installation_title") %></li>
      </ol>
    </nav>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-12 col-sm-12 col-md-8 col-lg-4 col-xl-4">
    <h4><%= t("devise.submit_token_title") %></h4>

    <%= verify_authy_installation_form do %>
      <div class="form-group">
        <%= text_field_tag :token, "", autocomplete: "one-time-code", inputmode: "numeric", pattern: "[0-9]*", id: "authy-token" %>
      </div>

      <div class="form-group">
        <%= authy_request_sms_link %>
      </div>

      <div class="form-group">
        <%= submit_tag t("devise.enable_my_account"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
