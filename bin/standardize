#! /bin/bash

set -eux

bundle exec standardrb --fix
yarn prettier --write "*.{yml,yaml,js,md}" \
                      "app/**/*.{js,css,scss}" \
                      ".circleci/*.{yml,yaml}" \
                      ".github/*.{yml,yaml}" \
                      ".github/**/*.{yml,yaml}" \
                      "config/**/*.{yml,yaml,js}" \
                      "doc/**/*.{yml,yaml}"
